@{
    ViewData["Title"] = "Cadastrar Produto";
}

<div class="container">

    <form id="ajax_form" action="Cadastrar">

        <div class="form-group">
            <label for="nomeProduto">Nome do produto</label>
            <input type="text" class="form-control" id="nomeProduto" name="nomeProduto" placeholder="Nome do produto">
        </div>

        <div class="form-group">
            <label for="descricao">Descrição</label>
            <textarea type="text" class="form-control" id="descricao" name="descricao" placeholder="Descrição"></textarea>
        </div>

        <div class="form-group">
            <label for="categoria">Categoria</label>
            <input type="text" class="form-control" id="categoria" name="categoria" placeholder="Categoria">
        </div>

        <div class="form-group">
            <label for="valor">Valor</label>
            <input type="text" class="form-control" id="valor" name="valor" placeholder="Valor">
        </div>

        <button type="submit" class="btn btn-primary">Cadastrar</button>

    </form>

</div>